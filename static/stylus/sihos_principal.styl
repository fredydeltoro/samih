/* Top Navigation */
.top-nav
	padding 0 15px
	
	& > li
		display inline-block
		float left
		
		& > a
			padding-top 15px
			padding-bottom 15px
			line-height 20px
			color #999
	
	& > .open
		& > .dropdown-menu
			float left
			position absolute
			margin-top 0
			border 1px solid rgba(0, 0, 0, .15)
			border-top-left-radius 0
			border-top-right-radius 0
			background-color #fff
			-webkit-box-shadow 0 6px 12px rgba(0, 0, 0, .175)
			box-shadow 0 6px 12px rgba(0, 0, 0, .175)
			
			& > li
				& > a
					white-space normal
					
.top-nav>li>a:hover,
.top-nav>li>a:focus,
.top-nav>.open>a,
.top-nav>.open>a:hover,
.top-nav>.open>a:focues
	color #fff
	background-color #000
	
ul
	&.message-dropdown
		padding 0
		max-height 250px
		overflow-x hidden
		overflow-y auto
		
	&.alert-dropdown
		width 200px
		
li
	&.message-preview
		width 275px
		border-bottom 1px solid rgba(0, 0, 0, .15)
		
		& > a
			padding-top 15px
			padding-bottom 15px
			
	&.message-footer
		margin 5px 0
		
/* Side Navigation */
@media(min-width:768px)
	.side-nav
		position fixed
		top 51px
		left 0
		width 150px
		border none
		border-radius 0
		overflow-y auto
		background-color #202020
		bottom 0
		overflow-x hidden
		padding-bottom 40px
		
		& > li
			
			& > a
				width 225px
				
.side-nav li a:hover,
.side-nav li a:focus
	outline none
	background-color #000 !important
	
.side-nav
	& > li
		& > ul
			padding 0
			
			& > li
				& > a
					display block
					padding 10px 15px 10px 38px
					text-decoration none
					color #999
					
					&:hover
						color #fff
						
